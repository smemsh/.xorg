#!/usr/bin/env bash

xset m 2 16
xset r rate 265 85

#
# "xinput --list" -> "xinput --list-props 11"
# "ls /dev/input/by-path/*event-mouse" -> "sudo evtest /dev/input/event1"
# left, right, top, bottom; X varies from X1 to X2; Y varies from Y1 to Y2
#
setprop () { xinput --set-prop "$@" || true; }
setprop 'Apple SPI Touchpad' 'Synaptics Area' -2500 3300 1800 5500

# min, max, accel, dontuse
setprop 'Apple SPI Touchpad' 'Synaptics Move Speed' 2.0 6.5 1.3 0

xkeymap=~/.Xkeymap
xkbcomp -I$(dirname $(readlink -f $xkeymap))/xkb $xkeymap :0 2>/dev/null
